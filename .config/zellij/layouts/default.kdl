layout {
    tab name="stats" {
        pane split_direction="vertical" {
            pane command="fastfetch"
            pane command="btop" {
                borderless true
            }
        }
        pane split_direction="vertical" {
            pane {
                focus true
            }
            pane {
                command "curl"
                args "https://wttr.in/Boston?F&A&Q&n"
            }
        }
    }
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
}
